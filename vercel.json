{
  "version": 2,
  "functions": {
    "api/process-emails.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/sms/send.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [{
    "path": "/api/process-emails",
    "schedule": "0 1 * * *"
  }],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}